<div data-role="panel" id="left-panel" data-display="push" data-position="left" data-theme="b">
    <div data-role="content">
        <ul data-role="listview" data-inset="true">
            <li data-role="list-divider">Bewohner</li>
            <% @mates.each do |mate| %> 
               <li data-icon="home"><a href="#<%= mate.first_name.downcase %>"><%= mate.first_name %></a></li>
            <% end %>
        </ul>
        <a href="#start" data-rel="close" data-role="button" data-theme="b" data-icon="delete" data-inline="true" class="ui-btn ui-icon-delete">Schließen</a>
    </div>
</div>

<div data-role="panel" id="right-panel" data-display="push" data-position="right" data-theme="a">
    <div data-role="content">
        <table>
        <% @areas.each do |area| %>
            <tr>
            <form>                    
                <td> 
                    <label for="flip-checkbox-3" style="display: inline;" id="flip-checkbox-label-<%= area.id %>"><%= area.name %></label>
                </td>
                <td>
                    <input type="checkbox" data-role="flipswitch" name="flip-checkbox-<%= area.id %>" data-on-text="dreckig" data-off-text="sauber" data-wrapper-class="custom-size-flipswitch" data-theme="b" id="flip-checkbox-<%= area.id %>" data-value="on">
                </td>
            </form>
            </tr>
        <% end %>
        </table>
        <a href="#start" data-rel="close" data-role="button" data-theme="b" data-icon="delete" data-inline="true" class="ui-btn ui-icon-delete">Schließen</a>
    </div>
</div>


<script>

<% @areas.each do |area| %>
                <% flip = %Q($("#flip-checkbox-#{area.id}").prop("checked", true);) %>
                <%= raw flip if area.clean? %>
                 $("#flip-checkbox-<%= area.id %>").on("change",function(event, ui) {

                            $.ajax({url: "areas/<%= area.id %>/edit", type: "GET"});

                            //alert( "Wert von " + $("#flip-checkbox-label-<%= area.id %>").text() + " geändert.");
                 });
<% end %>

</script>
