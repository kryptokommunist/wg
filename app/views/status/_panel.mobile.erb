<div data-role="panel" id="left-panel" data-display="push" data-position="left" data-theme="b">
    <div data-role="content">
        <ul data-role="listview" data-inset="true">
            <li data-role="list-divider">Bewohner</li>
            <% @mates.each do |mate| %>
               <li data-icon="home"><a href="#<%= mate.first_name.downcase %>"><%= mate.first_name %></a></li>
            <% end %>
            <li data-role="list-divider">Funktionen</li>
            <li data-icon="gear"><a href="#settings">Einstellungen</a></li>
            <li data-icon="bars"><a href="#logs">Logs</a></li>
        </ul>
        <a href="#" data-rel="close" data-role="button" data-theme="b" data-icon="delete" data-inline="true" class="ui-btn ui-icon-delete">Schließen</a>
    </div>
</div>

<div data-role="panel" id="right-panel" data-display="push" data-position="right" data-theme="a">
    <div data-role="content">
        <table>
        <% @areas.each do |area| %>
            <tr>
            <form>
                <td> 
                    <label for="flip-checkbox-3" style="display: inline;" id="flip-checkbox-label-<%= area.id %>"><%= area.name %></label>
                </td>
                <td>
                    <input type="checkbox" data-role="flipswitch" name="<%= area.id %>" data-on-text="dreckig" data-off-text="sauber" data-wrapper-class="custom-size-flipswitch" data-theme="b" area-id="<%= area.id %>" id="flip-checkbox-<%= area.id %>" class="panel-switch" onchange="flipped_checkbox(this)" <%=  raw %(checked="checked") unless area.clean? %>>
                </td>
            </form>
            </tr>
        <% end %>
        </table>
        <a href="#" data-rel="close" data-role="button" data-theme="b" data-icon="delete" data-inline="true" class="ui-btn ui-icon-delete">Schließen</a>
    </div>
</div>
