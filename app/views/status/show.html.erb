<% @areas.each do |area| %>
	<div class="col-md-4 text-center" style="margin-bottom: 20px">
	<div class="img-thumbnail" style="color: white; background-color:rgba(0, 0, 0, 0.3)">
	<h2 style="margin-top: 0;"><%= area.name %>

	<% if area.name == "KÃ¼che"%>
		<%= content_tag(:i,"" , class: "fa fa-cutlery") %>
