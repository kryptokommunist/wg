<div class="text-center">
	
<%= link_to image_tag(asset_path(mate.first_name.downcase + ".jpg"), class: "img-circle fade-in box-shadow", alt: "mate", width: "140", height: "140"), '#' + mate.first_name %>


<h2 style="margin-top: 5pt; margin-bottom: 20pt"><%= mate.first_name %></h2>

	<div data-role="collapsible" data-theme="b" data-content-theme="b">
	    <h2>Was gibt's neues?</h2>
	    <ul data-role="listview">
	        <% @areas.each do |area| %>
				<li>
					<a href="#" onClick="cleaned_area(this.id, <%= mate.id %>)" id="<%= area.id %>" >
						<%= area.name %>
						<span style="width: 7em;float: right;">
							<%= render 'shared/label', area: area %>
						</span>
						<span class="ui-li-count" style="width: 4.5em;">
							<%= area.points %> Pkt.
						</span>
					</a>
				</li>
	        <% end %>
	    </ul>
		<button class="ui-btn ui-icon-delete ui-btn-icon-left ui-shadow ui-corner-all" onClick="change_assigned_area(<%= mate.id %>)">Aktuelle Aufgabe ändern</button>
	</div>

<%= render 'mates/mate_list', mate: mate %>
</div>
	